doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/login.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    .container
      .row
        .col-sm-9.col-md-7.col-lg-5.mx-auto
          .card.border-0.shadow.rounded-3.my-5
            .card-body.p-4.p-sm-5
              h5.card-title.text-center.mb-5.fw-light.fs-5 Thesis PDF
              form
                .form-floating.mb-3
                  input#floatingInput.form-control(type='email' placeholder='name@example.com')
                  label(for='floatingInput') E-mail
                .form-floating.mb-3
                  input#floatingPassword.form-control(type='password' placeholder='Password')
                  label(for='floatingPassword') Password
                .d-grid
                  button.btn.btn-primary.btn-login.text-uppercase.fw-bold(type='submit')
                    | Sign
                    | in
               